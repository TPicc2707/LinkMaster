@model  LinkMasters.Models.Image
@{
    ViewData["Title"] = "CreateImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 create-image">
        <form asp-action="Create Image" class="image-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="text-align: center;"><h3>Add Image</h3></div>

            <div class="form-group">
                <label class="control-label">Image Name</label>
                <input asp-for="ImageName" class="form-control" id="name" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Choose Image.. (.jpg or .png)</label>
                <input type="file" class="form-control" name="files" />
            </div>
            <div class="form-group" style="padding-top: 20px;">
                <input type="submit" value="Create Image" class="btn btn-primary" id="create-link" /> <a class="btn btn-primary" style="float: right;" asp-action="Index" asp-controller="Home">Cancel</a>
            </div>
        </form>
    </div>
</div>

